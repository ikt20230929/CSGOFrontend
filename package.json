{
  "name": "csgofrontend",
  "version": "1.0.0",
  "description": "CSGO Frontend",
  "main": "index.js",
  "scripts": {
    "esbuild:base": "esbuild src/js/index.js --bundle --loader:.js=jsx --format=cjs --outfile=public/dist/bundle.js",
    "build:esbuild": "npm run config && npm run esbuild:base -- --minify",
    "watch:esbuild": "npm run esbuild:base -- --watch",
    "config": "ncp config/settings-prod.js src/js/settings.js --stopOnErr",
    "config:dev": "nodemon --exec \"ncp config/settings-dev.js src/js/settings.js --stopOnErr\" --watch config/settings-dev.js",
    "serve": "serve public/ -s",
    "open": "opener https://127.0.0.1:3000/",
    "build": "npm run config && npm run build:esbuild",
    "build:dev": "npm run build:esbuild",
    "watch": "concurrently --kill-others-on-fail npm:config:dev npm:watch:esbuild npm:serve npm:open"
  },
  "homepage": "./",
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.1",
    "esbuild": "0.19.4",
    "opener": "^1.5.2",
    "postcss": "^8.4.31",
    "postcss-preset-mantine": "^1.11.0",
    "postcss-simple-vars": "^7.0.1",
    "serve": "^14.2.1"
  },
  "dependencies": {
    "@mantine/core": "^7.2.2",
    "@mantine/hooks": "^7.2.2",
    "@mantine/nprogress": "^7.2.2",
    "axios": "^1.6.2",
    "ncp": "^2.0.0",
    "nodemon": "^3.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-router-dom": "^6.18.0"
  }
}
