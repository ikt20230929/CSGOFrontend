{
  "name": "react-template",
  "version": "1.0.0",
  "description": "React Template",
  "main": "index.js",
  "scripts": {
    "build:esbuild": "esbuild src/js/index.js --bundle --minify --loader:.js=jsx --format=cjs --outfile=public/dist/bundle.js",
    "watch:esbuild": "esbuild src/js/index.js --bundle --minify --loader:.js=jsx --format=cjs --outfile=public/dist/bundle.js --watch",
    "build:css": "esbuild src/css/style.css --bundle --outfile=public/dist/bundle.css",
    "watch:css": "esbuild src/css/style.css --bundle --outfile=public/dist/bundle.css --watch",
    "build": "concurrently --kill-others-on-fail npm:build:esbuild npm:build:css",
    "watch": "concurrently --kill-others-on-fail npm:watch:esbuild npm:watch:css"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.1",
    "dotenv": "^16.3.1",
    "esbuild": "0.19.4"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.47.0"
  }
}
